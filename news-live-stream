                    <input class="form-check-input" type="checkbox" value="ary" id="aryCheck" checked>
                    <label class="form-check-label" for="aryCheck">ARY News</label>
                </div>

                <!-- Grid Size Selector -->
                <h5 class="mt-4">Grid Size</h5>
                <div class="btn-group" role="group" aria-label="Grid Size">
                    <input type="radio" class="btn-check" name="gridSize" id="grid2" value="2" autocomplete="off" >
                    <label class="btn btn-outline-primary" for="grid2">2 Columns</label>

                    <input type="radio" class="btn-check" name="gridSize" id="grid3" value="3" autocomplete="off">
                    <label class="btn btn-outline-primary" for="grid3">3 Columns</label>

                    <input type="radio" class="btn-check" name="gridSize" id="grid4" value="4" autocomplete="off" checked>
                    <label class="btn btn-outline-primary" for="grid4">4 Columns</label>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-9 col-lg-10 p-3">
                <div id="streams" class="row">
                    <div class="col-md-6 col-lg-4 col-xl-3 mb-4 stream-item" id="geo">
                        <h5>Geo News</h5>
                        <iframe src="https://www.youtube.com/watch?v=O3DPVlynUM0" frameborder="0" width="100%" height="315" allowfullscreen></iframe>
                    </div>
                    <div class="col-md-6 col-lg-4 col-xl-3 mb-4 stream-item" id="dunya">
                        <h5>Dunya News</h5>
