    <!-- Bootstrap and JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // JavaScript to control iframe visibility based on checkbox
        document.querySelectorAll('.form-check-input').forEach((checkbox) => {
            checkbox.addEventListener('change', function() {
                const streamDiv = document.getElementById(this.value);
                if (this.checked) {
                    streamDiv.style.display = 'block';
                } else {
                    streamDiv.style.display = 'none';
                }
            });
        });

        // JavaScript to control the grid size
        document.querySelectorAll('input[name="gridSize"]').forEach((radio) => {
            radio.addEventListener('change', function() {
                const selectedSize = this.value;
                document.querySelectorAll('.stream-item').forEach((item) => {
                    item.classList.remove('col-md-6', 'col-lg-4', 'col-xl-3');
                    if (selectedSize == '2') {
                        item.classList.add('col-md-6');
                    } else if (selectedSize == '3') {
                        item.classList.add('col-lg-4');
                    } else if (selectedSize == '4') {
                        item.classList.add('col-xl-3');
                    }
                });
            });
        });
    </script>
</body>
</html>
